.flex-container
    display:flex
    flex-wrap: wrap
    &--header
        background-image: 
            repeating-linear-gradient(-45deg, #D61313, #D61313 10px, #044211 10px, #044211 20px)
.flex-item
    flex: 1
    background: orange
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    font-size: 2em
    .num
        font-size: 1.5em
    .txt
        font-size: 1.2em
    &--fixed-width
        flex: initial
        width: 30%
        background: red
    &--full-width
        flex: initial
        width: 100%
        background: green
    &--icon
        flex: initial
        height: 10vh
        width: 10vh;
        stroke: white
        stroke-width: 4
        fill: white
        background: none
        border: 2px dashed white
        svg 
            width: 100%
    &--flex-center
        margin: auto
    &--flex-end
        margin-left: auto 